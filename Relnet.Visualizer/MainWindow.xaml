<Window x:Class="Relnet.Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Relnet.Visualizer"
        mc:Ignorable="d"
        Title="Relnet Visualizer" Height="350" Width="525">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="drawingCanvas" VerticalAlignment="Stretch" Loaded="canvas_loaded">
        </Canvas>
        <Button Grid.Row="1" x:Name="btnStep" Click="btnStep_Click">Step</Button>
    </Grid>
</Window>
